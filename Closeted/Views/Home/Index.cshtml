@using Closeted;

@{
    ViewData["Title"] = "Create New Items";
}
@{

    IEnumerable<Top> top = ViewData["Top"] as IEnumerable<Top>;
    IEnumerable<Bottom> bottom = ViewData["Bottom"] as IEnumerable<Bottom>;
    IEnumerable<Headwear> headwear = ViewData["Headwear"] as IEnumerable<Headwear>;
}

<div class="text-center">
    <h2>Create New Items</h2>


    
    
    
    <div class="row">
        <div class="col-4">

            @using (Html.BeginForm("Top", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <h3>Top</h3>
                <div>
                    <label for="file">Choose an image:</label>
                    <input type="file" name="file" id="file" />
                </div>
                <div>
                    <button type="submit">Upload</button>
                </div>
            }
            <!-- Display Tops in a table -->
            <h4>Tops</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th colspan="2">Images</th> <!-- Another column for the second image -->
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < top.Count(); i += 2)
                    {
                        <tr>
                            <!-- First Image -->
                            <td>
                                @if (top.ElementAt(i).Image != null && top.ElementAt(i).Image.Length > 0)
                                {
                                    var base64Image = Convert.ToBase64String(top.ElementAt(i).Image);
                                    <img src="data:image/jpeg;base64,@base64Image" style="max-width: 100px; height: auto;" />
                                }
                                else
                                {
                                    <span>No image available</span>
                                }
                            </td>

                            <!-- Second Image (if available) -->
                            @if (i + 1 < top.Count())
                            {
                                <td>
                                    @if (top.ElementAt(i + 1).Image != null && top.ElementAt(i + 1).Image.Length > 0)
                                    {
                                        var base64Image = Convert.ToBase64String(top.ElementAt(i + 1).Image);
                                        <img src="data:image/jpeg;base64,@base64Image" style="max-width: 100px; height: auto;" />
                                    }
                                    else
                                    {
                                        <span>No image available</span>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
